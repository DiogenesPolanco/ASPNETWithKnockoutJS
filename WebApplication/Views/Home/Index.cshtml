
@model ViewModel.BlogViewModel
@{
    ViewBag.Title = "Home Page";
}
@using Newtonsoft.Json;

@section scripts{
    <script type="text/javascript">
         
    var BlogViewModel = function (data) { 
        var self = this;
        ko.mapping.fromJS(data, {}, self);
    };
        var data = ko.mapping.fromJS(@Html.Raw(Json.Encode(Model)));
        window.viewModel = new BlogViewModel(data);
        ko.applyBindings(window.viewModel, document.getElementById("testDiv"));
    </script>
}

<div class="jumbotron" id="testDiv">
    <h1>@Model.Name</h1>
    @foreach (var post in Model.Posts)
    {
        <h1>@post.Title</h1>
        <b>@post.Content</b>
        <h2>@post.DateShort</h2>
    }
    <input type="text" data-bind="textinput: Name" />
    <strong data-bind="text: Name"></strong>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

